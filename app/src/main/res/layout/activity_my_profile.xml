<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/common_google_signin_btn_text_light_default">

    <ImageView
    android:layout_width="170dp"
    android:layout_height="170dp"
    app:srcCompat="@drawable/logo"
    android:id="@+id/imageView3"
    android:layout_marginTop="-10dp"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"/>

<ScrollView


    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scroll"
    android:layout_below="@+id/imageView3"
   >
    <RelativeLayout
    android:id="@+id/activity_my_profile"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

        >




        <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/nameLay"
       >
        <TextView
        android:text="Username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textStyle="bold"
            android:textColor="#ffffff"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="34dp"
        android:id="@+id/textView" />   
        <EditText
            android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
            android:textSize="22sp"
        android:hint="   username"
        android:ems="10"
            android:textColor="#ffffff"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="19dp"
        android:layout_marginEnd="19dp"
        android:layout_marginTop="23dp"
        android:id="@+id/usernameVal" /> 
    </RelativeLayout> 

        <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cityLay"
        android:layout_below="@+id/nameLay"
        >
        <TextView
        android:text="Phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="34dp"
        android:id="@+id/phone" />  
        <EditText
            android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="   phone number"
        android:ems="10"
            android:textColor="#ffffff"
            android:textSize="22sp"

        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="19dp"
        android:layout_marginEnd="19dp"
        android:layout_marginTop="23dp"
        android:id="@+id/phoneVal" /> 
    </RelativeLayout>
        <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/firstNameLay"
        android:layout_below="@+id/cityLay"
     >
        <TextView
        android:text="First Name "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:textSize="22sp"
        android:textStyle="bold"
            android:textColor="#ffffff"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="34dp"
        android:id="@+id/Fname" />  
        <EditText
        android:layout_height="wrap_content"
            android:layout_width="200dp"
            android:inputType="textPersonName"
            android:textSize="22sp"
        android:hint="   First Name"
        android:ems="10"
            android:textColor="#ffffff"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="19dp"
        android:layout_marginEnd="19dp"
        android:layout_marginTop="23dp"
        android:id="@+id/fNameVal" />
    </RelativeLayout>

        <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lastNAmeLay"
        android:layout_below="@+id/firstNameLay"
        >
        <TextView
        android:text="Last Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:textSize="22sp"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"
            android:textColor="#ffffff"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="34dp"
        android:id="@+id/lastname"/>   

            <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="   Last Name "
            android:layout_marginTop="-6dp"
                android:textSize="22sp"
                android:textColor="#ffffff"

                android:id="@+id/lastNameVal"
                android:layout_alignTop="@+id/lastname"
                android:layout_toRightOf="@+id/lastname"
                android:layout_marginLeft="48dp"
                android:layout_marginStart="48dp"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>  

        <Spinner
            android:layout_width="220dp"
            android:layout_height="35dp"
            android:id="@+id/spinnerRegion"
            android:layout_gravity="center_horizontal"
            android:drawSelectorOnTop="true"
            android:layout_marginTop="20dp"
            android:spinnerMode="dropdown"
            android:background="#1ab4ff"
            android:textColor="#FFFFFF"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"

            android:layout_marginRight="30dp"
            android:layout_marginEnd="30dp"
            android:layout_below="@+id/lastNAmeLay"
            />

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Edit Profile"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="18dp"
    android:onClick="EditUser"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:layout_below="@id/spinnerRegion"
    android:textSize="16sp"
    android:textColor="#ffffff"
    android:layout_marginBottom="20dp"
    android:background="#1ab4ff" />

        </RelativeLayout>


    </ScrollView>



</RelativeLayout>